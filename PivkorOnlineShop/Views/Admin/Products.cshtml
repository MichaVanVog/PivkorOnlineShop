@model List<Product>
@{
    ViewData["Title"] = "Панель администратора";
}

<h3>Панель Администратора</h3>
<div class="row">
    @await Html.PartialAsync("AdminLeftPannel")

    <div class="col-9">
        <div class="row">
            <h4>Товары</h4>
        </div>

        <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="AddProduct" role="button">Добавить новый товар</a>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Наименование</th>
                        <th>Цена</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td><img src="@product.ImagePath" alt="@product.Name" width="30" height="30"></td>
                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            <td><a class="btn" asp-controller="Admin" asp-action="EditProduct" asp-route-ProductId="@product.Id"><span class="badge rounded-pill bg-light text-dark">редактировать</span></a></td>
                            <td><a class="btn" asp-controller="Admin" asp-action="RemoveProduct" asp-route-ProductId="@product.Id"><span class="badge rounded-pill bg-light text-dark">удалить</span></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>