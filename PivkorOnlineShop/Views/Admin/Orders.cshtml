@model List<Order>
@{
    ViewData["Title"] = "Панель администратора";
}

<h3>Панель Администратора</h3>
<div class="row">
    @await Html.PartialAsync("AdminLeftPannel")

    <div class="col-9">
        <h4>Заказы клиентов</h4>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Статус</th>
                    <th>Сумма</th>
                    <th>Дата</th>
                    <th>Время</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i< Model.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
                        <td>@Model[i].PriceSumOfAllItems</td>
                        <td>@Model[i].CreatedDateTime.ToString("d")</td>
                        <td>@Model[i].CreatedDateTime.ToString("T")</td>
                        <td>
                            <a class="btn" asp-controller="Admin" asp-action="OrderDetails" asp-route-orderId="@Model[i].Id">
                                <span class="badge rounded-pill bg-light text-dark">Подробнее</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>