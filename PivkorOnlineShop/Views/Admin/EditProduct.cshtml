@model Product
@{
    ViewData["Title"] = @Model.Name;
}
<div>
<h3>Редактирование товара</h3>
</div>

<div class="text-danger font-weight bold" asp-validation-summary="All"></div>

<form method="post">
<input asp-for="Id" type="hidden" class="form-control" value="@Model?.Id"/>
<div class="mb-3 row">
    <label for="Name" class="col-sm-2 col-form-label">Наименование</label>
    <div class="col-sm-5">
        <input asp-for="Name" type="text" class="form-control" value="@Model?.Name" />
        <span asp-validation-for="Name" />
    </div>
</div>
<div class="mb-3 row">
    <label for="Price" class="col-sm-2 col-form-label">Цена продажи</label>
    <div class="col-sm-5">
        <input asp-for="Price" type="text" class="form-control" value="@Model?.Price"/>
        <span asp-validation-for="Price" />
    </div>
</div>
<div class="mb-3 row">
    <label for="Description" class="col-sm-2 col-form-label">Описание</label>
    <div class="col-sm-5">
        <input asp-for="Description" type="text" class="form-control" placeholder="опционально" value="@Model?.Description"/>
    </div>
</div>
    <div>
        <button class="btn btn-success" type="submit" asp-controller="Admin" asp-action="EditProduct">Сохранить</button>
        <button class="btn btn-success" type="submit" asp-controller="Admin" asp-action="Products">Отмена</button>
    </div>
</form>