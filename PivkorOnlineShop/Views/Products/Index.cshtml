@model Product
@{
    ViewData["Title"] = @Model.Name;
}

<div class="row my-5">
    <div class="col-6">
        <img class="shadow" height="200" alt="картинка @Model.Name" src=@Model.ImagePath/>
    </div>
    <div class="col-6">
        <h5>@Model.Name</h5>
        <h5>@Model.Price руб.</h5>
        <p>@Model.Description</p>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Delivery" role="button">Продолжить покупки</a>
        <a class="btn btn-warning" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id" role="button">Добавить в корзину</a>
    </div>
</div>
