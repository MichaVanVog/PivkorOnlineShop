@model Registration

@{
    ViewData["Title"] = "Вход в личный кабинет";
}
<div class="d-flex justify-content-center">
    <h3>Регистрация</h3>
</div>

<div class="text-danger font-weight bold" asp-validation-summary="All"></div>

<form class="align-content-center align-self-center align-items-center" method="post">
    <div class="mb-3 align-content-center align-self-center">
        <label asp-for="Phone" class="form-label">Логин</label>
        <input asp-for="Phone" type="number" class="form-control" placeholder="89991115533">
        <span asp-validation-for="Phone" />
        <div class="form-text">Логин - ваш номер телефона.</div>
    </div>
    <div class="mb-3 align-content-center align-self-center">
        <label asp-for="Email" class="form-label">Адрес электронной почты</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="piv@pivkor.ru">
        <span asp-validation-for="Email" />
        <div class="form-text">Необходим для восстановления пароля</div>
    </div>
    <div class="mb-3 align-content-center align-self-center">
        <label asp-for="Password" class="form-label">Пароль</label>
        <input asp-for="Password" type="password" class="form-control" required>
        <span asp-validation-for="Password" />
        <div class="form-text">Пароль должен содержать минимум 6 знаков</div>
    </div>
    <div class="mb-3 align-content-center align-self-center">
        <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label>
        <input asp-for="ConfirmPassword" class="form-control" >
        <span asp-validation-for="ConfirmPassword" />
    </div>
    <div class="mb-3 align-content-center align-self-center">
        <label asp-for="FirstName" class="form-label">Имя</label>
        <input asp-for="FirstName" class="form-control" >
        <span asp-validation-for="FirstName" />
    </div>
    <div class="mb-3 align-content-center align-self-center">
        <label asp-for="LastName" class="form-label">Фамилия</label>
        <input asp-for="LastName" class="form-control" >
        <span asp-validation-for="LastName" />
    </div>
    <div class="mb-3 align-content-center align-self-center">
        <label asp-for="Patronymic" class="form-label">Отчетство</label>
        <input asp-for="Patronymic" class="form-control" >
        <div class="form-text">Заполняется при желании</div>
    </div>

    <div class="d-flex justify-content-center">
        <button class="btn btn-primary" type="submit" asp-controller="Account" asp-action="Registration">Зарегистрироваться</button>
    </div>
</form>

<div class="d-flex justify-content-center">
    <label class="form-label">Уже есть учетная запись?</label>
</div>
<div class="d-flex justify-content-center">
    <a asp-controller="Account" asp-action="Login">Войдите в личный кабинет</a>
</div>
