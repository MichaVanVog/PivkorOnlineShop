@model Login

@{
    ViewData["Title"] = "Вход в личный кабинет";
}
<div class="d-flex justify-content-center">
<h3>Вход в личный кабинет</h3>
</div>

<div class="text-danger font-weight bold" asp-validation-summary="ModelOnly"></div>

<form class="align-content-center align-self-center align-items-center" method="post">
    <div class="mb-3 col-3 align-content-center align-self-center">
        <label asp-for="Phone" class="form-label">Логин</label>
        <input asp-for="Phone" type="tel" class="form-control" placeholder="89991115533">
        <span asp-validation-for="Phone" />
        <div id="emailHelp" class="form-text">Логин - ваш номер телефона.</div>
    </div>
    <div class="mb-3 col-3 align-content-center align-self-center">
        <label asp-for="Password" class="form-label">Пароль</label>
        <input asp-for="Password" type="password" class="form-control">
        <span asp-validation-for="Password" />
    </div>
    <div class="d-flex justify-content-center form-check">
        <input asp-for="RememberMe" type="checkbox" class="form-check-input">
        <label class="form-check-label" for="checkbox">Запомнить меня?</label>
        <span asp-validation-for="RememberMe" />
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary" type="submit" asp-controller="Account" asp-action="Login">Войти</button>
    </div>
</form>
<div>

</div>
<div class="d-flex justify-content-center">
    <label class="form-label">Вы еще не зарегестрированы?</label>
</div>
    <div class="d-flex justify-content-center">
        <a asp-controller="Account" asp-action="Registration">Регистрация нового пользователя</a>
    </div>